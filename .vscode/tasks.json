{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Lint and Fix",
      "type": "shell",
      "command": "./scripts/lint-fix.sh",
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "npm run test",
      "group": "test"
    }
  ]
}
